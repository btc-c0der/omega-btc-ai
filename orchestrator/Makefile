	@for service in $$(docker-compose -f $(COMPOSE_FILE) ps --services); do \
		echo "âœ¨ Blessing $$service..."; \
		docker-compose -f $(COMPOSE_FILE) restart $$service; \
	done
	@echo "ğŸŒŸ All services have been blessed"

