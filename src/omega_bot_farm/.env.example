# ðŸ§¬ OMEGA BOT FARM - Environment Configuration Example

# API Keys for BitGet Exchange
# Note: These will override the root .env values if specified here
BITGET_API_KEY=""
BITGET_SECRET_KEY=""
BITGET_PASSPHRASE=""
USE_TESTNET=false

# Position Analyzer Configuration
POSITION_HISTORY_LENGTH=10
SIGNIFICANT_CHANGE_THRESHOLD=5.0
HARMONY_SCORE_THRESHOLD=0.7

# Fibonacci Parameters
GOLDEN_RATIO=1.618034
INVERSE_GOLDEN_RATIO=0.618034

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=omega_bot_farm.log

# Redis Configuration (for caching/state)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Analysis Parameters
DEFAULT_ACCOUNT_EQUITY=10000
MIN_ANALYSIS_INTERVAL=10  # seconds
MAX_ANALYSIS_INTERVAL=300  # seconds

# Notification Settings
DISCORD_WEBHOOK_URL=""
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""
EMAIL_NOTIFICATIONS=false
EMAIL_SENDER=""
EMAIL_RECEIVER=""
EMAIL_PASSWORD=""
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT=587

# Portfolio Metrics
GOLDEN_RATIO_EXPOSURE_THRESHOLD=0.05  # Allow 5% deviation from golden ratio
EXPOSURE_WARNING_THRESHOLD=0.8  # Warn when exposure to equity ratio exceeds 80%

# Advanced Features
ENABLE_QUANTUM_SECURE_LOGGING=true
ENABLE_FIBONACCI_ANALYSIS=true
ENABLE_POSITION_HARMONY_ANALYSIS=true
ENABLE_PORTFOLIO_RECOMMENDATIONS=true

# Performance
CACHE_TIMEOUT=60  # seconds
THREADING_ENABLED=true
MAX_THREADS=4 