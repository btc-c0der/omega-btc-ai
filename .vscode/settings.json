{
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestArgs": [
        "omega_ai/tests"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "workbench.colorCustomizations": {
        "activityBar.background": "#2d6a4f",
        "activityBar.foreground": "#ffbd00",
        "statusBar.background": "#2d6a4f",
        "statusBar.foreground": "#ffbd00",
        "statusBarItem.hoverBackground": "#2d7a45",
        "titleBar.activeBackground": "#2d6a4f",
        "titleBar.activeForeground": "#ffbd00"
    },
    "python.testing.cwd": "${workspaceFolder}",
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.autoImportCompletions": true
}