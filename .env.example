# SECURITY NOTICE: This file contains sensitive configuration. Never commit the actual .env file!

# Version
VERSION=1.0.0

# Application
NODE_ENV=production
LOG_LEVEL=INFO

# Security
JWT_SECRET=change_this_to_a_secure_random_string
API_KEY=change_this_to_a_secure_api_key

# Redis Configuration
REDIS_PASSWORD=change_this_to_a_secure_password
REDIS_HOST=redis
REDIS_PORT=6379

# PostgreSQL Configuration
POSTGRES_DB=omega_db
POSTGRES_USER=omega_user
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/omega-btc-ai.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/omega-btc-ai.com.key

# Resource Limits
REDIS_MAX_MEMORY=1G
POSTGRES_MAX_CONNECTIONS=100
API_RATE_LIMIT=100
WS_MAX_CONNECTIONS=1000

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_to_a_secure_password

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=omega-btc-ai-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1 